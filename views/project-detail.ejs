<%- include('partials/header') %>

<main>
    <!-- Project Header -->
    <section class="page-header">
        <div class="container">
            <h1><%= project.title %></h1>
            <p><%= project.category %> by Minimalist Architecture | <%= project.location %> | <%= project.year %></p>
        </div>
    </section>

    <!-- Project Details -->
    <section class="section">
        <div class="container">
            <div class="project-detail-content">
                <div class="project-main-image">
                    <img src="<%= project.image_url %>" alt="<%= project.title %>">
                </div>

                <div class="project-description">
                    <h2>Minimalist Project Overview</h2>
                    <p><%= project.description %></p>

                    <div class="project-specs">
                        <div class="spec-item">
                            <strong>Category:</strong>
                            <span><%= project.category %></span>
                        </div>
                        <div class="spec-item">
                            <strong>Location:</strong>
                            <span><%= project.location %></span>
                        </div>
                        <div class="spec-item">
                            <strong>Year Completed:</strong>
                            <span><%= project.year %></span>
                        </div>
                    </div>
                </div>

                <div class="project-navigation">
                    <a href="/projects" class="btn btn-outline">‚Üê Back to Projects</a>
                    <a href="/contact" class="btn btn-primary">Start Your Minimalist Project</a>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include('partials/footer') %>
